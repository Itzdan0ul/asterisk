{
  "name": "asterisk",
  "version": "1.0.0",
  "description": "Beautiful desktop application for your pocket to generate passwords.",
  "main": "src/index.js",
  "scripts": {
    "start": "electron src",
    "dev": "cross-env NODE_ENV=development electron src",
    "test": "jest",
    "test:watch": "jest --watch",
    "tsc": "tsc --project ./",
    "vite": "vite build && node ./scripts/afterBundling.js",
    "rebuild": "electron-rebuild",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Itzdan0ul/asterisk.git"
  },
  "keywords": [
    "electronjs",
    "password",
    "generator",
    "desktop",
    "password-generator"
  ],
  "author": {
    "name": "Itzdan0ul",
    "email": "itzdan.ul@tutanota.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Itzdan0ul/asterisk/issues"
  },
  "homepage": "https://github.com/Itzdan0ul/asterisk#readme",
  "dependencies": {
    "fs-extra": "^10.1.0",
    "module-alias": "^2.2.2",
    "vue-inline-svg": "^3.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.5",
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-typescript": "^7.17.12",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^28.1.3",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^18.0.0",
    "@vitejs/plugin-vue": "^3.0.1",
    "babel-jest": "^28.1.1",
    "cross-env": "^7.0.3",
    "electron": "^20.0.1",
    "electron-builder": "^23.3.3",
    "jest": "^28.1.3",
    "vite": "^3.0.4",
    "vue": "^3.2.37",
    "vuex": "^4.0.2"
  },
  "build": {
    "appId": "com.itzdan0ul.asterisk",
    "productName": "Asterisk",
    "copyright": "Copyright Â© 2022 Itzdan0ul",
    "directories": {
      "output": "build/release"
    },
    "compression": "maximum",
    "asar": true,
    "npmRebuild": true,
    "afterPack": "scripts/afterPack.js",
    "files": [
      "!**/renderer/**/*.scss",
      "!**/renderer/**/*.vue",
      "!**/renderer/common",
      "!**/renderer/assets",
      "!**/renderer/assets",
      "!**/renderer/store",
      "!**/renderer/index.html",
      "!**/renderer/index.js",
      "!.vscode",
      "!.github",
      "!README.md",
      "!SECURITY.md",
      "!vite.config.js",
      "!test",
      "!scripts",
      "!resources",
      "!babel.config.js",
      "!tsconfig.json",
      "!jest.config.js",
      "!src/**/*.ts",
      "!.prettierignore",
      "!.prettierrc",
      "!.nvmrc"
    ],
    "win": {
      "icon": "build/images/asterisk@256x256.ico",
      "target": [
        "portable"
      ],
      "verifyUpdateCodeSignature": false
    },
    "portable": {
      "artifactName": "asterisk.${ext}"
    },
    "linux": {
      "target": [
        "appImage"
      ],
      "executableArgs": [
        "asterisk"
      ],
      "icon": "build/images/asterisk@256x256.icns",
      "category": "utils"
    },
    "appImage": {
      "artifactName": "asterisk",
      "license": "LICENSE"
    }
  }
}
