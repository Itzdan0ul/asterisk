{
  "include": [
		"src/**/*.ts",
		"scripts/**/*.ts"
  ],
  "exclude": ["node_modules"],
	"compilerOptions": {
		"sourceMap": false,
		"noImplicitAny": true,
    "module": "CommonJS",
    "target": "ES2022",
    "allowJs": true,
		"allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
		"esModuleInterop": true
	}
}