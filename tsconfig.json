{
  "compilerOptions": {
    "target": "ES2021",        
    "module": "CommonJS",
    "baseUrl": ".",
    "paths": { "@src/*": ["src/*"], "@main/*": ["src/main/*"] },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["scripts/**/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules"]
}
